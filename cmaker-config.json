{
  "name": "pico",
  "version": "1.0.0",
  "license": "Unspecified",
  "project": {
    "cpp": {
      "header": "hpp",
      "source": "cpp",
      "standard": 17,
      "standard-required": true
    },
    "c": {
      "header": "h",
      "source": "c",
      "standard": 99,
      "standard-required": true
    },
    "include-guards": "pragma",
    "namespace": "pico"
  },
  "build": {
    "make": "Ninja",
    "export-compile-commands": true,
    "verbose-makefile": false,
    "debug": {
      "build-dir": "build-debug",
      "output": "./bin/debug",
      "flags": ["CMAKE_BUILD_TYPE=Debug"]
    },
    "release": {
      "build-dir": "build-release",
      "output": "./bin/release",
      "flags": ["CMAKE_BUILD_TYPE=Release"]
    }
  },
  "scripts": {
    "clean": "rm -rdf ./build**/*"
  }
}
